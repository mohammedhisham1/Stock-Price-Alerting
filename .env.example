# Django Configuration - Production EC2 Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False
ALLOWED_HOSTS=your-ec2-public-ip,your-domain.com,localhost,127.0.0.1

# Database Configuration - AWS RDS PostgreSQL
DB_NAME=stockalertingdb
DB_USER=your-rds-username
DB_PASSWORD=your-rds-password
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432

# Redis Configuration - Local Redis on EC2
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS Configuration - Vercel Frontend URLs
CORS_ALLOWED_ORIGINS=https://your-vercel-app.vercel.app,http://localhost:3000
CORS_ALLOW_ALL_ORIGINS=False

# Stock API Configuration
TWELVE_DATA_API_KEY=your-twelve-data-api-key-here

# Email Configuration - Gmail SMTP
EMAIL_HOST_USER=your-gmail@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here

# Production Settings
CELERY_TASK_ALWAYS_EAGER=False

# AWS Configuration (for deployment)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
