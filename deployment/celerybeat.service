[Unit]
Description=Celery Beat Service
After=network.target redis.service

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/Stock-Price-Alerting
Environment=PATH=/home/ubuntu/Stock-Price-Alerting/venv/bin
ExecStart=/home/ubuntu/Stock-Price-Alerting/venv/bin/celery -A stock_alerting beat -l info --scheduler django_celery_beat.schedulers:DatabaseScheduler
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
