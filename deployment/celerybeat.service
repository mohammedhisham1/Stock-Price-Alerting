[Unit]
Description=Stock Alerting Celery Beat Scheduler
After=network.target

[Service]
Type=simple
User=stockalert
Group=stockalert
WorkingDirectory=/home/stockalert/app
Environment=PATH=/home/stockalert/app/venv/bin
Environment=DJANGO_SETTINGS_MODULE=stock_alerting.settings
ExecStart=/home/stockalert/app/venv/bin/celery -A stock_alerting beat -l info
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
